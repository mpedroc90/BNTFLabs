doctype html
html
  head
    title= "Administrador de Usuarios"
    link(href="/stylesheets/bootstrap.min.css", rel="stylesheet")
    link(href="/stylesheets/Chart.min.css", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div.container
      div
        h1 Administrador de Usuarios
        div#alert-info
          div.d-none.alert.alert-info.fade.show(role=alert)
            span#info="custom message"
        block content
    
    #viewmodal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
      .modal-dialog.modal-md(role='document')
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Perfil
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
             div.container
                div.row
                  section.col.profile_image_section=Image
                    figure
                      img#image_profile(width="90%", height="90%", src ="data:image/png;base64," )
                  section.col.data_section=Data
                      div.form-group
                        h5.modal-title#name
                      div.form-group
                       label Rut: 
                          span#rut
                      div.form-group
                       label Edad: 
                          span#age
                      div.form-group
                       label Direcci&oacute;n:
                          span#adresss
                      div.form-group
                       label Tel&eacute;fono:
                          span#phone
                      div.form-group
                       label Email:
                         span#email
                div.row
                  section.col.skills_section=Skills
                    canvas#myChart(width=15 , height=5 )
             
          .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Cerrar

    #updatemodal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#exampleModalLabel.modal-title Modificar
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
             div.container
                div.row
                  
                  section.col.data_section=Data
                      div#form-error.alert.alert-danger.d-none
                      form#form(method="POST", novalidate)
                        div.form-group
                          label Tel&eacute;fono
                          input.form-control(name="phone" type="phone" data-required="El telefono es requerido")
                        div.form-group
                          label Email
                          input.form-control(name="email" type="email" 
                              data-required="El email es requerido"
                              data-email="El email es invalido")
                        div.form-group
                          label Direcci&oacute;n
                          textarea.form-control(name="address", cols="30", rows="3" data-require="La direcci√≥n es requerida")
          .modal-footer
            button#update.btn.btn-primary(type='submit') Modificar
            button.btn.btn-secondary.close-modal(type='button' data-dismiss='modal') Cerrar
            
            
    script(src="/javascripts/jquery-3.4.1.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/bootstrap.bundle.min.js")
    script(src="/javascripts/Chart.min.js")
    script(src="/javascripts/index.js")
